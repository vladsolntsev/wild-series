{% extends 'base.html.twig' %}

{% block title %}{{ 'comment'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'comment'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>{{ 'comment'|trans }}</th>
                <td>{{ comment.comment }}</td>
            </tr>
            <tr>
                <th>{{ 'rate'|trans }}</th>
                <td>{{ comment.rate }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('comment_index') }}">{{ 'comment.list'|trans }}</a>

    <a href="{{ path('comment_edit', {'id': comment.id}) }}">{{ 'edit'|trans }}</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
