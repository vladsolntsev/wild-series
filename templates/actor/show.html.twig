{% extends 'base.html.twig' %}

{% block title %}{{ 'actor'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'actor'|trans }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <img class="align-self-start mr-3 poster" src="/uploads/{{ actor.poster }}" alt="{{ actor.name }} poster">
        </tr>
            <tr>
                <th>{{ 'id'|trans }}</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>{{ 'name'|trans }}</th>
                <td>{{ actor.name }}</td>
            </tr>
            <tr>
                <th>{{ 'slug'|trans }}</th>
                <td>{{ actor.slug }}</td>
            </tr>
            <tr>
                <th>{{ 'series'|trans }}</th>
                {% for program in actor.programs %}
                <td>{{ program.title  }}</td>
                {% endfor %}
            </tr>

        </tbody>
    </table>

    <a href="{{ path('actor_index') }}">{{ 'actor.list'|trans }}</a>

    <a href="{{ path('actor_edit', {'id': actor.id, 'slug' :actor.slug}) }}">{{ 'edit'|trans }}</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
