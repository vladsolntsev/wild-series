{% extends 'base.html.twig' %}

{% block title %}{{ 'actor.list'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'actor.list'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'id'|trans }}</th>
                <th>{{ 'name'|trans }}</th>
                <th>{{ 'slug'|trans }}</th>
                <th>{{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.id }}</td>
                <td>{{ actor.name }}</td>
                <td>{{ actor.slug }}</td>
                <td>
                    <a href="{{ path('actor_show', {'id': actor.id, 'slug': actor.slug}) }}">{{ 'show'|trans }}</a>
                    <a href="{{ path('actor_edit', {'id': actor.id, 'slug': actor.slug}) }}">{{ 'edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'actor.null'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('actor_new') }}">{{ 'new'|trans }}</a>
{% endblock %}
