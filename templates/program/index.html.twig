{% extends 'base.html.twig' %}
{% block title %}Wild Series{% endblock %}

  {% block body %}<h1>Toutes les séries :</h1>

      {% for program in programs %}
          <div>
              <h2><a href="{{ path("program_show", { id: program.id }) }}">{{ loop.index }} / {{ program.title }} -
                      Catégorie : {{ program.category.name }}</a></h2>
              <p>{{ program.summary }}</p>

          </div>
      {% else %}
          Aucune série trouvée.
      {% endfor %}
      <a href="{{ path('program_new') }}">Ajouter un programme</a>
      <a href="{{ path('app_index') }}">Retour à l'accueil</a>
  {% endblock %}


