{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <ul>
                {% for season in seasons %}
                    <h5><a href="{{ path("program_season_show", {'slug': program.slug, 'seasonId': season.id }) }}">Saison {{ season.number }}
                            ({{ season.year }})</a></h5>
                {% else %}
                    Aucune saison trouvée.
                {% endfor %}
            </ul>
            <strong>Acteurs :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li><a href="{{ path("actor_show", {'slug': actor.slug }) }}">{{ actor.name }}</a></li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
        </div>
    </div>
    {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('program_edit', {'slug': program.slug}) }}">Editer</a>
    {% endif %}
    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}