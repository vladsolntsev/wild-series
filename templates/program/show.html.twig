{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3 poster" src="/uploads/{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <i id="watchlist" class="fa-heart watchlist {{ app.user.isInWatchlist(program) ? 'fas' : 'far' }} " data-href='{{path('program_watchlist', {'id': program.id})}}'></i>

            <p>{{ program.summary }}</p>
            <p>{{ 'category'|trans }} : {{ program.category.name }}</p>
            <ul>
                {% for season in seasons %}
                    <h5><a href="{{ path("program_season_show", {'slug': program.slug, 'seasonId': season.id }) }}">{{ 'season'|trans }} {{ season.number }}
                            ({{ season.year }})</a></h5>
                {% else %}
                    {{ 'season.null'|trans }}
                {% endfor %}
            </ul>
            <strong>{{ 'actors'|trans }} :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li><a href="{{ path("actor_show", {'slug': actor.slug }) }}">{{ actor.name }}</a></li>
                {% else %}
                    <li>{{ 'actors.null'|trans }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('program_edit', {'slug': program.slug}) }}">{{ 'edit'|trans }}</a>
    {% endif %}
    <a href="{{ path('program_index') }}">
        {{ 'program.list'|trans }}
    </a>

    <script>
        document.querySelector("#watchlist").addEventListener('click', addToWatchlist);

        function addToWatchlist(event) {

// Get the link object you click in the DOM
            let watchlistIcon = event.target;
            let link = watchlistIcon.dataset.href;
// Send an HTTP request with fetch to the URI defined in the href
            fetch(link)
                // Extract the JSON from the response
                .then(res => res.json())
                // Then update the icon
                .then(function(res) {
                    if (res.isInWatchlist) {
                        watchlistIcon.classList.remove('far'); // Remove the .far (empty heart) from classes in <i> element
                        watchlistIcon.classList.add('fas'); // Add the .fas (full heart) from classes in <i> element
                        console.log('yes');
                    } else {
                        watchlistIcon.classList.remove('fas'); // Remove the .fas (full heart) from classes in <i> element
                        watchlistIcon.classList.add('far'); // Add the .far (empty heart) from classes in <i> element
                        console.log('no');
                    }
                });
        }
    </script>
{% endblock %}