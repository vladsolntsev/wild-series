{% extends 'base.html.twig' %}
{% block title %}Catégorie : {{ category }}{% endblock %}

{% block body %}
    <h1>Les 3 dernières séries de la catégorie {{ category }} : </h1>
    {% for program in programs %}
        <div>
            <h2><a href="{{ path("program_show", { programId: program.id }) }}">{{ program.title }}</a></h2>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <a href="{{ path('category_index') }}">
        Retour à la liste des catégories
    </a>

{% endblock %}
